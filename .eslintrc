{
    "env": {
        "browser": true,
        "jquery": true,
        "node": true,
        "es6": true,
        "mocha": true
    },
    "eslint.enable": true,
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "globals": {
        "React": true
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-console": 0,
        "no-restricted-globals": 0,
        "react/react-in-jsx-scope": 0,
        "react/no-danger": 0
    }
}
